{{#if cvs}}
<h2>Tus CVs</h2>

<ul>
  {{#each cvs}}
  <li>
    <a href="myCVs/edit/{{this._id}}">
    {{#if this.cvName}}
    {{this.cvName}}
    {{else}}
    {{this._id}}
    {{/if}}
    </a>
  </li>
  {{/each}}
</ul>

{{else}}
<h2>No tienes perfiles creados</h2>
{{/if}}

<form action="/create" method="post">
  <input type="radio" checked="checked" name="newCv" style="display: none;" />
  <input type="submit" value="Crear nuevo perfil" />
</form>